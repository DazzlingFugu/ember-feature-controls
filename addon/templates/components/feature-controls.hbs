<table class="ember-feature-controls-table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Status</th>
    </tr>
  </thead>
  <tbody>
    {{#each model as |flag|}}
      <tr>
        <td>{{flag.key}}</td>
        <td>{{flag.description}}</td>
        <td>
          <label class="ember-feature-controls-label" data-test-label-flag={{flag.key}}>
            {{input
              type="checkbox"
              checked=flag.isEnabled
              change=(action "doToggleFeature" flag.key flag.isEnabled)
              data-test-checkbox-flag=flag.key
            }}
            {{#if (not-eq flag.isEnabled flag.default)}}
              <span
                class="ember-feature-controls-warning"
                title="The internal default value of this flag is being overriden with this one"
              >
                ‚ùó
              </span>
            {{/if}}
          </label>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>

{{#if showRefresh}}
  <button
    type="button"
    title="Refresh this table in case its state has been changed elsewhere"
    class="ember-feature-controls-refresh ember-feature-controls-button" {{action "refresh"}}
    data-test-button-refresh
  >
    Refresh table
  </button>
{{/if}}

{{#if showReset}}
  <button
    type="button"
    title="Reset table to internal default values"
    class="ember-feature-controls-reset ember-feature-controls-button" {{action "reset"}}
    data-test-button-reset
  >
    Reset to default
  </button>
{{/if}}
